pipeline {
    agent any

    stages {
        stage('Clone GitHub Repo') {
            steps {
                // Add GitHub's SSH key to known hosts before cloning the repo
                sh 'ssh-keyscan github.com >> ~/.ssh/known_hosts'

                // Clone the GitHub repository using SSH
                git branch: 'main',
                    url: 'git@github.com:Ahmed3019/my-cv-application.git',
                    credentialsId: 'github-cerd'
            }
        }

        stage('Build Docker Image') {
            steps {
                echo 'Building Docker image...'
                // Add your Docker build commands here
            }
        }

        stage('Push Docker Image') {
            steps {
                echo 'Pushing Docker image...'
                // Add your Docker push commands here
            }
        }

        stage('Run Terraform to create EC2') {
            steps {
                echo 'Running Terraform to create EC2...'
                // Add your Terraform commands here
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                echo 'Deploying to Kubernetes...'
                // Add your Kubernetes deployment commands here
            }
        }
    }

    post {
        always {
            cleanWs() // Clean up the workspace after the build
        }
    }
}
